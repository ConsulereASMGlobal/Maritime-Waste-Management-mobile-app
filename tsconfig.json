{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*/index", "src/*"]
    },
    "noEmit": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "typeRoots": ["./types"]
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js"]
}
